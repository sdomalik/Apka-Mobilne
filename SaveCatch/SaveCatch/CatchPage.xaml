<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveCatch.CatchPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="addFish" Clicked="AddFish_Clicked" Text="Nowa ryba"></Button>
            <ListView x:Name="lvFish">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Species}" TextColor="#3C3C3C"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="deleteCatch" Clicked="DeleteCatch_Clicked" Text="Usuń połów"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>